                             Creation_Date="{{currentTime}}" Provider_ID="TXJY"
                             Asset_ID="{{'TXJY'+value.id+'002'}}" Asset_Class="movie" Verb=""/>
                        <App_Data App="VOD" Name="Title" Value="{{value.name}}"/>

